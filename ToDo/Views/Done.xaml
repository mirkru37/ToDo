<Window x:Class="ToDo.Views.Done"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:ToDo.Views"
        mc:Ignorable="d"
        Background="#ECF0F9"
        Title="Done" Height="541" Width="382">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="243*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <!-- Grid Background-->
        <Grid Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.17*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border  Background="#D9E1F2" Height="140"/>
        </Grid>

        <!-- Grid control -->
        <Grid Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.17*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>



            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >

                <!-- Return -->
                <Button  Margin="0, 5,0,0" Width="40" Height="33" Style="{StaticResource blueButton}" Click="OpenMain">
                    <fa:ImageAwesome  Foreground="#D9E1F2" Height="23" Icon="AngleLeft" Style="{StaticResource angle}"/>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Text -->
                <TextBlock Margin="10, 0,0,0"
                           Text="Tasks (last month) "  FontSize="30" Foreground="#264073"/>

            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Done/Undone -->
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                        <Button Style="{StaticResource weekButton}">
                            <TextBlock FontSize="30">Done</TextBlock>
                        </Button>
                        <Button Style="{StaticResource weekButton}">
                            <TextBlock FontSize="30">Undone</TextBlock>
                        </Button>
                    </StackPanel>
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="340" Height="3">
                        <Line HorizontalAlignment="Center" Stretch="None" X1="340" Y1="3" Y2="3"
                              Stroke="#CEDBEA"
                              StrokeThickness="3" />
                    </Canvas>
                </Grid>

                <!-- Tasks Part-->
                <Grid Grid.Row="1">
                    <ListBox VerticalAlignment="Top" Width="1340" Height="484" 
                             Background="#ECF0F9" BorderThickness="0" >
                        <ListBox.ItemsPanel >
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <!-- Grid -->
                        <ListBox  VerticalAlignment="Top" Width="370" Height="370" 
                                  Background="#ECF0F9" BorderThickness="0" Margin="0,-80,10,10">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="173"/>
                                    <ColumnDefinition Width="173"/>
                                </Grid.ColumnDefinitions>

                                <Grid >

                                    <ListView x:Name="DoneList">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Border Style="{StaticResource taskBoxBorder}">
                                                        <Button Margin="20,10,20,10" Style="{StaticResource taskButton}">
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource taskBoxName}" Text="{Binding Name}"/>
                                                                <Border  Style="{StaticResource taskBoxCategory_TimeBorder}">
                                                                    <TextBlock Style="{StaticResource taskBoxCategory_TimeText}" Text="{Binding Deadline, StringFormat='{}{0:h:mm tt}'}"/>
                                                                </Border>
                                                                <Border  Style="{StaticResource taskBoxCategory_TimeBorder}">
                                                                    <TextBlock Style="{StaticResource taskBoxCategory_TimeText}" Text="{Binding Categories}"/>
                                                                </Border>
                                                                <TextBlock Style="{StaticResource taskBoxDescription}" Text="{Binding Description}"/>
                                                            </StackPanel>
                                                        </Button>
                                                    </Border>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                                <Grid Grid.Column="1" >
                                    <ListView x:Name="UndoneList">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Border Style="{StaticResource taskBoxBorder}">
                                                        <Button Margin="20,10,20,10" Style="{StaticResource taskButton}">
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource taskBoxName}" Text="{Binding Name}"/>
                                                                <Border  Style="{StaticResource taskBoxCategory_TimeBorder}">
                                                                    <TextBlock Style="{StaticResource taskBoxCategory_TimeText}" Text="{Binding Deadline, StringFormat='{}{0:h:mm tt}'}"/>
                                                                </Border>
                                                                <Border  Style="{StaticResource taskBoxCategory_TimeBorder}">
                                                                    <TextBlock Style="{StaticResource taskBoxCategory_TimeText}" Text="{Binding Categories}"/>
                                                                </Border>
                                                                <TextBlock Style="{StaticResource taskBoxDescription}" Text="{Binding Description}"/>
                                                            </StackPanel>
                                                        </Button>
                                                    </Border>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                                <Canvas HorizontalAlignment ="Right" VerticalAlignment="Center" Width="30" Height="483">
                                    <Line Stretch="None" X2="30" X1="30" Y2="360"
                                      Stroke="#CEDBEA"
                                      StrokeThickness="2" />
                                </Canvas>
                            </Grid>
                        </ListBox>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
